<head>
  <link rel="stylesheet" href="/styles/style.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  <script src="/scripts/slides.js">
  </script>
</head>

<h1>KōtarEATS</h1>

<div class="main-wrap">

  <div class="recipe_display">

    {{#each recipes}}
    <div class="recipe_box">
      <div class="img_div">
        <img class="imgs" src="{{recipe_picture}}" alt="tasty food">
      </div>
      <p><a href="/recipe/{{id}}">{{title}}</a></p>
    </div>
    {{/each}}
  </div>


  <div id="users_column">
    <h3>Kool Kōtare Kats!!</h3>
    <p>Click a name to see their favourite recipes</p>
    <ul>
      {{#each profiles}}
      <li><a href="/profile/{{id}}">{{name}}</a></li>
      {{/each}}
    </ul>
    <a href="/addprofile/">Add Profile</a>
  </div>
</div>